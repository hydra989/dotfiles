{ config, inputs, ... }:
{
  programs.zsh = {
    enable = true;

    dotDir = ".config/zsh";

    initExtra = ''
      SOURCEDIR=$HOME/s
      (cat ${config.xdg.cacheHome}/wal/sequences &)
    '';

    history = {
      save = 1000;
      size = 1000;
      path = "$HOME/.cache/zsh_history";
    };

    enableAutosuggestions = true;
    enableSyntaxHighlighting = true;
    oh-my-zsh = {
      enable = true;
      plugins = [ "git" "tmux" ];
      theme = "ys";
      extraConfig = ''
        ZSH_TMUX_AUTOSTART=true
      '';
    };

    shellAliases = {
      clock = "tty-clock -c -t";
      reboot = "sudo reboot";
      unixporn = "clear && neofetch";
      quit = "exit";
      dots = "cd ~/s/dotfiles";
			rebuild = "sudo nixos-rebuild switch";
    };
  };
}
